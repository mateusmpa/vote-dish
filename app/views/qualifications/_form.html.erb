<%= form_for @qualification, html: { class: "form-horizontal" } do |f| %>
  <% if @qualification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qualification.errors.count, "error") %> prohibited this qualification from being saved:</h2>

      <ul>
      <% @qualification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if @qualification.customer %>
      <%= f.hidden_field 'customer_id' %>
    <% else %>
      <%= f.label :customer_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :customer_id, @customers, :id, :name, { prompt: true }, { class: "form-control" } %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <% if @qualification.restaurant %>
      <%= f.hidden_field 'restaurant_id' %>
    <% else %>
      <%= f.label :restaurant_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :restaurant_id, @restaurants, :id, :name, { prompt: true }, { class: "form-control" } %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :note, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :note, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount_spent, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :amount_spent, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
