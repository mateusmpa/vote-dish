<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt>Avatar: </dt>
  <dd><%= image_tag @restaurant.avatar.url(:medium), class: "img-thumbnail" %></dd>

  <dt>Name: </dt>
  <dd><%= @restaurant.name %></dd>

  <dt>Address: </dt>
  <dd><%= @restaurant.address %></dd>

  <dt>Specialty: </dt>
  <dd><%= @restaurant.specialty %></dd>

  <dt>Average note: </dt>
  <dd><%= @restaurant.qualifications.average(:note) %></dd>

  <dt>Qualifications: </dt>
  <dd><%= @restaurant.qualifications.count %></dd>

  <dt>Average amount spent: </dt>
  <dd><%= @restaurant.qualifications.average(:amount_spent) %></dd>
</dl>

<%= comments @restaurant %>

<%= new_comment @restaurant %>

<%= link_to 'Edit', action: 'edit', id: @restaurant %> |
<%= link_to 'Back', action: 'index' %> |
<%= link_to 'Qualify this Restaurant', controller: 'qualifications', action: 'new', restaurant: @restaurant %>
